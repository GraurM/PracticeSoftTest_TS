{
  "name": "practice-soft-test-ts",
  "version": "1.0.0",
  "description": "Playwright testing project using TypeScript",
  "scripts": {
    "test": "cucumber-js --config ./cucumber.js",
    "test:bdd": "cucumber-js --config ./cucumber.js",
    "test:bdd:api": "node -e \"require('fs').rmSync('allure-results',{ recursive: true, force: true })\" && cucumber-js --config ./cucumber.api.js",
    "test:bdd:ui": "node -e \"require('fs').rmSync('allure-results',{ recursive: true, force: true })\" && cucumber-js --config ./cucumber.ui.js",
    "test:allure": "npm run test:bdd && npm run allure:generate",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:pw": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:visual": "playwright test tests/playwright/visual --project=chromium",
    "test:a11y": "playwright test tests/playwright/accessibility --project=chromium",
    "test:perf": "node scripts/run-k6.js",
    "test:quality": "npm run test:visual && npm run test:a11y && npm run test:perf",
    "codegen": "playwright codegen",
    "build": "tsc",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.0.0",
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.19.34",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
